---
import MarketingLayout from "../layouts/MarketingLayout.astro";
import { faqCategories } from "../data/faq";
---

<MarketingLayout
  title="FAQ"
  description="Frequently asked questions about FloImg, pricing, self-hosting, open source licensing, and more."
>
  <div class="mx-auto max-w-3xl px-6 py-16">
    <!-- Hero -->
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold text-zinc-900 dark:text-white mb-4">
        Frequently Asked Questions
      </h1>
      <p class="text-xl text-zinc-600 dark:text-zinc-400 max-w-2xl mx-auto">
        Quick answers to common questions about FloImg, pricing, and getting started.
      </p>
    </div>

    <!-- FAQ Categories -->
    <div class="space-y-12">
      {
        faqCategories.map((category) => (
          <section id={category.slug}>
            <h2 class="text-2xl font-bold text-zinc-900 dark:text-white mb-6 pb-2 border-b border-zinc-200 dark:border-white/10">
              {category.name}
            </h2>
            <div class="space-y-0">
              {category.questions.map((faq, index) => (
                <details
                  class="group border-b border-zinc-200 dark:border-white/10"
                  id={`${category.slug}-${index}`}
                >
                  <summary class="flex items-center justify-between gap-4 py-4 cursor-pointer list-none hover:bg-zinc-50 dark:hover:bg-zinc-900/50 -mx-4 px-4 rounded transition-colors">
                    <span class="text-base font-medium text-zinc-900 dark:text-white">
                      {faq.question}
                    </span>
                    <svg
                      class="w-5 h-5 text-zinc-500 dark:text-zinc-400 flex-shrink-0 transition-transform group-open:rotate-180"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                    </svg>
                  </summary>
                  <div class="pb-4 pr-8">
                    <p class="text-sm text-zinc-600 dark:text-zinc-400 leading-relaxed">
                      {faq.answer}
                    </p>
                  </div>
                </details>
              ))}
            </div>
          </section>
        ))
      }
    </div>

    <!-- Still have questions CTA -->
    <div
      class="mt-16 text-center py-12 px-6 bg-zinc-50 dark:bg-zinc-900 rounded-lg border border-zinc-200 dark:border-white/10"
    >
      <h2 class="text-xl font-semibold text-zinc-900 dark:text-white mb-2">
        Still have questions?
      </h2>
      <p class="text-zinc-600 dark:text-zinc-400 mb-6">
        Join our community or check the docs for more detailed information.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/discord"
          class="inline-flex items-center justify-center px-6 py-3 bg-zinc-200 dark:bg-zinc-700 hover:bg-zinc-300 dark:hover:bg-zinc-600 text-zinc-900 dark:text-white font-medium rounded-lg transition-colors"
        >
          <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
            <path
              d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"
            ></path>
          </svg>
          Join Discord
        </a>
        <a
          href="/docs"
          class="inline-flex items-center justify-center px-6 py-3 bg-zinc-200 dark:bg-zinc-700 hover:bg-zinc-300 dark:hover:bg-zinc-600 text-zinc-900 dark:text-white font-medium rounded-lg transition-colors"
        >
          View Docs
        </a>
      </div>
    </div>

    <!-- Cross-reference to Safety -->
    <p class="mt-8 text-center text-sm text-zinc-500 dark:text-zinc-500">
      For questions about content moderation and safety, see our <a
        href="/safety"
        class="text-teal-600 dark:text-teal-400 hover:underline">Safety page</a
      >.
    </p>
  </div>
</MarketingLayout>

<style>
  /* Hide default details marker */
  details summary::-webkit-details-marker {
    display: none;
  }

  details summary::marker {
    display: none;
  }

  /* Smooth open/close animation */
  details[open] > div {
    animation: slideDown 0.15s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
