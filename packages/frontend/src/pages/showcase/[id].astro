---
/**
 * Showcase Item Detail Page (SSR)
 *
 * Server-side rendered for proper SEO and social sharing.
 * Dynamic og:image, og:title, og:description for link previews.
 */
export const prerender = false;

import MarketingLayout from "../../layouts/MarketingLayout.astro";

const API_URL = import.meta.env.PUBLIC_API_URL || "https://api.floimg.com";
const STUDIO_URL = import.meta.env.PUBLIC_STUDIO_URL || "https://studio.floimg.com";

const { id } = Astro.params;

// Fetch item data server-side
let item: any = null;
let error: string | null = null;

if (id) {
  try {
    const res = await fetch(`${API_URL}/api/showcase/${id}`);
    if (res.ok) {
      const data = await res.json();
      item = data.item;
    } else if (res.status === 404) {
      error = "not_found";
    } else {
      error = "fetch_error";
    }
  } catch (e) {
    console.error("Failed to fetch showcase item:", e);
    error = "fetch_error";
  }
}

// Generate metadata
const pageTitle = item ? `${item.title} - FloImg Showcase` : "Item Not Found";
const pageDescription = item?.description || "View this showcase item on FloImg.";
const ogImageUrl = item ? `${API_URL}/api/storage/images/${item.image.id}/content` : undefined;

// Format author info for SSR
const authorName = item?.user?.name || item?.user?.username || "Anonymous";
const authorInitial = (item?.user?.name?.[0] || item?.user?.username?.[0] || "?").toUpperCase();
const authorUrl = item?.user?.username ? `/u/${item.user.username}` : null;
---

<MarketingLayout title={pageTitle} description={pageDescription} ogImage={ogImageUrl}>
  <main class="showcase-detail">
    <div class="container">
      {
        !item ? (
          <div class="error-state">
            <h1>Item Not Found</h1>
            <p>This showcase item may have been removed or doesn't exist.</p>
            <a href="/showcase" class="back-link-btn">
              Back to Showcase
            </a>
          </div>
        ) : (
          <div class="content">
            <a href="/showcase" class="back-link">
              <svg class="back-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 19l-7-7 7-7"
                />
              </svg>
              Back to Showcase
            </a>

            <div class="detail-grid">
              <div class="image-section">
                <div class="image-container">
                  <img
                    src={`${API_URL}/api/storage/images/${item.image.id}/content`}
                    alt={item.title}
                    class="main-image"
                  />
                </div>
              </div>

              <div class="info-section">
                <h1 class="item-title">{item.title}</h1>

                <div class="author-section">
                  <a href={authorUrl || "#"} class="author-link">
                    <span class="author-avatar">{authorInitial}</span>
                    <span class="author-name">{authorName}</span>
                  </a>
                  <span class="item-time" data-created={item.createdAt} />
                </div>

                <div class="stats-row">
                  <button
                    id="like-btn"
                    class="stat-btn"
                    data-id={item.id}
                    data-liked={item.isLiked ? "true" : "false"}
                  >
                    <svg
                      id="like-icon"
                      class="stat-icon"
                      fill={item.isLiked ? "currentColor" : "none"}
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                      />
                    </svg>
                    <span id="like-count">{item.likeCount}</span>
                  </button>
                  <span class="stat">
                    <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                      />
                    </svg>
                    <span>{item.viewCount}</span>
                  </span>
                  <span class="stat">
                    <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
                      />
                    </svg>
                    <span id="comment-count">{item.commentCount}</span>
                  </span>
                </div>

                {item.description && (
                  <div class="description-section">
                    <p>{item.description}</p>
                  </div>
                )}

                {(item.category || (item.tags && item.tags.length > 0)) && (
                  <div class="meta-section">
                    {item.category && (
                      <span class="category-badge">{item.category.replace("-", " ")}</span>
                    )}
                    {item.tags && item.tags.length > 0 && (
                      <div class="tags-container">
                        {item.tags.map((tag: string) => (
                          <span class="tag">#{tag}</span>
                        ))}
                      </div>
                    )}
                  </div>
                )}

                {item.workflowShared && item.workflowId && (
                  <div class="workflow-section">
                    <a href={`${STUDIO_URL}?workflow=${item.workflowId}`} class="workflow-button">
                      <svg
                        class="workflow-icon"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"
                        />
                      </svg>
                      Open Workflow in Studio
                    </a>
                  </div>
                )}
              </div>
            </div>

            <div class="comments-section">
              <h2 class="comments-title">
                Comments
                <span id="comments-count-badge" class="comments-count">
                  ({item.commentCount})
                </span>
              </h2>

              <div class="comment-form-section">
                <textarea
                  id="comment-input"
                  class="comment-input"
                  placeholder="Add a comment..."
                  maxlength="1000"
                />
                <div class="comment-form-actions">
                  <span id="comment-char-count" class="char-count">
                    0/1000
                  </span>
                  <button id="submit-comment-btn" class="submit-comment-btn" disabled>
                    Post Comment
                  </button>
                </div>
              </div>

              <div id="comments-list" class="comments-list" />
              <div id="no-comments" class="no-comments hidden">
                <p>No comments yet. Be the first to comment!</p>
              </div>
            </div>
          </div>
        )
      }
    </div>
  </main>

  <script define:vars={{ API_URL, itemId: id }}>
    // Format relative time for timestamps
    function formatRelativeTime(dateStr) {
      const date = new Date(dateStr);
      const now = new Date();
      const diffMs = now - date;
      const diffSec = Math.floor(diffMs / 1000);
      const diffMin = Math.floor(diffSec / 60);
      const diffHour = Math.floor(diffMin / 60);
      const diffDay = Math.floor(diffHour / 24);

      if (diffDay > 30)
        return date.toLocaleDateString("en-US", {
          year: "numeric",
          month: "short",
          day: "numeric",
        });
      if (diffDay > 0) return `${diffDay} day${diffDay > 1 ? "s" : ""} ago`;
      if (diffHour > 0) return `${diffHour} hour${diffHour > 1 ? "s" : ""} ago`;
      if (diffMin > 0) return `${diffMin} minute${diffMin > 1 ? "s" : ""} ago`;
      return "just now";
    }

    // Update item time on client
    const itemTimeEl = document.querySelector(".item-time");
    if (itemTimeEl && itemTimeEl.dataset.created) {
      itemTimeEl.textContent = formatRelativeTime(itemTimeEl.dataset.created);
    }

    // Load comments
    async function fetchComments() {
      try {
        const res = await fetch(`${API_URL}/api/showcase/${itemId}/comments`, {
          credentials: "include",
        });

        if (!res.ok) return;

        const data = await res.json();
        renderComments(data.comments);
      } catch (err) {
        console.error("Failed to fetch comments:", err);
      }
    }

    function renderComments(comments) {
      const listEl = document.getElementById("comments-list");
      const noCommentsEl = document.getElementById("no-comments");

      if (comments.length === 0) {
        listEl.innerHTML = "";
        noCommentsEl.classList.remove("hidden");
        return;
      }

      noCommentsEl.classList.add("hidden");
      listEl.innerHTML = comments
        .map(
          (comment) => `
        <div class="comment" data-id="${comment.id}">
          <div class="comment-header">
            <a href="${comment.user.username ? `/u/${comment.user.username}` : "#"}" class="comment-author">
              <span class="author-avatar">${comment.user.name?.[0]?.toUpperCase() || comment.user.username?.[0]?.toUpperCase() || "?"}</span>
              <span class="author-name">${comment.user.name || comment.user.username || "Anonymous"}</span>
            </a>
            <span class="comment-time">${formatRelativeTime(comment.createdAt)}</span>
          </div>
          <p class="comment-content">${escapeHtml(comment.content)}</p>
        </div>
      `
        )
        .join("");
    }

    function escapeHtml(text) {
      const div = document.createElement("div");
      div.textContent = text;
      return div.innerHTML;
    }

    // Like handler
    document.getElementById("like-btn")?.addEventListener("click", async () => {
      try {
        const res = await fetch(`${API_URL}/api/showcase/${itemId}/like`, {
          method: "POST",
          credentials: "include",
        });

        if (res.status === 401) {
          window.location.href = `/login?return=${encodeURIComponent(window.location.href)}`;
          return;
        }

        if (!res.ok) throw new Error("Failed to like");

        const data = await res.json();
        const likeBtn = document.getElementById("like-btn");
        const likeIcon = document.getElementById("like-icon");

        document.getElementById("like-count").textContent = data.likeCount;
        likeBtn.classList.toggle("liked", data.liked);
        likeIcon.setAttribute("fill", data.liked ? "currentColor" : "none");
      } catch (err) {
        console.error("Failed to toggle like:", err);
      }
    });

    // Comment form
    const commentInput = document.getElementById("comment-input");
    const charCount = document.getElementById("comment-char-count");
    const submitBtn = document.getElementById("submit-comment-btn");

    commentInput?.addEventListener("input", () => {
      const len = commentInput.value.length;
      charCount.textContent = `${len}/1000`;
      submitBtn.disabled = len === 0 || len > 1000;
    });

    submitBtn?.addEventListener("click", async () => {
      const content = commentInput.value.trim();
      if (!content) return;

      submitBtn.disabled = true;
      submitBtn.textContent = "Posting...";

      try {
        const res = await fetch(`${API_URL}/api/showcase/${itemId}/comments`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          credentials: "include",
          body: JSON.stringify({ content }),
        });

        if (res.status === 401) {
          window.location.href = `/login?return=${encodeURIComponent(window.location.href)}`;
          return;
        }

        if (!res.ok) throw new Error("Failed to post comment");

        commentInput.value = "";
        charCount.textContent = "0/1000";
        fetchComments();

        // Update count
        const countEl = document.getElementById("comment-count");
        const badgeEl = document.getElementById("comments-count-badge");
        const newCount = parseInt(countEl.textContent) + 1;
        countEl.textContent = newCount;
        badgeEl.textContent = `(${newCount})`;
      } catch (err) {
        console.error("Failed to post comment:", err);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = "Post Comment";
      }
    });

    // Initial load
    fetchComments();
  </script>
</MarketingLayout>

