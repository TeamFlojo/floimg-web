---
import MarketingLayout from "../layouts/MarketingLayout.astro";
import GitHubContributors from "../components/GitHubContributors.astro";
import { fetchContributors, fetchRepoStats } from "../lib/github";

const contributors = await fetchContributors();
const stats = await fetchRepoStats();

const contributionAreas = [
  {
    icon: "code",
    title: "Core Development",
    description: "Help build new features, fix bugs, and improve the FloImg engine.",
    link: "https://github.com/TeamFlojo/floimg/issues?q=is%3Aissue+is%3Aopen+label%3A%22good+first+issue%22",
    linkText: "Good first issues",
  },
  {
    icon: "puzzle",
    title: "Create Plugins",
    description:
      "Build new generators to extend FloImg's capabilities with your favorite image libraries.",
    link: "/docs/plugins/creating-plugins",
    linkText: "Plugin guide",
  },
  {
    icon: "book",
    title: "Documentation",
    description: "Improve guides, add examples, and help others learn to use FloImg effectively.",
    link: "https://github.com/TeamFlojo/floimg-web/issues",
    linkText: "Doc issues",
  },
  {
    icon: "megaphone",
    title: "Spread the Word",
    description: "Write blog posts, create tutorials, or share FloImg with your community.",
    link: "https://twitter.com/intent/tweet?text=Check%20out%20FloImg%20-%20Universal%20image%20workflow%20engine%20for%20developers%20and%20AI%20agents%20https://floimg.com",
    linkText: "Share on X",
  },
];
---

<MarketingLayout
  title="Community"
  description="Join the FloImg community. Contribute to the project, connect with other developers, and help shape the future of image workflows."
>
  <main>
    <!-- Hero -->
    <section class="hero-section">
      <div class="hero-container">
        <h1 class="hero-title">Built by the Community</h1>
        <p class="hero-subtitle">
          FloImg is open source and built by developers like you. Join our community to contribute,
          learn, and shape the future of image workflows.
        </p>
        <div class="hero-stats">
          <a href="https://github.com/TeamFlojo/floimg/stargazers" class="stat" target="_blank">
            <span class="stat-value">{stats.stargazers_count}</span>
            <span class="stat-label">Stars</span>
          </a>
          <div class="stat">
            <span class="stat-value">{contributors.length}+</span>
            <span class="stat-label">Contributors</span>
          </div>
          <a
            href="https://github.com/TeamFlojo/floimg/network/members"
            class="stat"
            target="_blank"
          >
            <span class="stat-value">{stats.forks_count}</span>
            <span class="stat-label">Forks</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Contributors Grid -->
    <section class="section">
      <div class="section-container">
        <h2 class="section-title">Contributors</h2>
        <p class="section-description">
          Thank you to everyone who has contributed to FloImg. Your work makes this project
          possible.
        </p>
        <GitHubContributors contributors={contributors} />
        <div class="contributors-cta">
          <a
            href="https://github.com/TeamFlojo/floimg/graphs/contributors"
            class="btn secondary"
            target="_blank"
          >
            View all contributors
          </a>
        </div>
      </div>
    </section>

    <!-- How to Contribute -->
    <section class="section alt">
      <div class="section-container">
        <h2 class="section-title">How to Contribute</h2>
        <p class="section-description">
          There are many ways to contribute to FloImg, regardless of your experience level.
        </p>
        <div class="contribution-grid">
          {
            contributionAreas.map((area) => (
              <div class="contribution-card">
                <div class="card-icon">
                  {area.icon === "code" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <polyline points="16 18 22 12 16 6" />
                      <polyline points="8 6 2 12 8 18" />
                    </svg>
                  )}
                  {area.icon === "puzzle" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path d="M19.439 7.85c-.049.322.059.648.289.878l1.568 1.568c.47.47.706 1.087.706 1.704s-.235 1.233-.706 1.704l-1.611 1.611a.98.98 0 0 1-.837.276c-.47-.07-.802-.48-.968-.925a2.501 2.501 0 1 0-3.214 3.214c.446.166.855.497.925.968a.979.979 0 0 1-.276.837l-1.61 1.61a2.404 2.404 0 0 1-1.705.707 2.402 2.402 0 0 1-1.704-.706l-1.568-1.568a1.026 1.026 0 0 0-.877-.29c-.493.074-.84.504-1.02.968a2.5 2.5 0 1 1-3.237-3.237c.464-.18.894-.527.967-1.02a1.026 1.026 0 0 0-.289-.877L2.707 12.41a2.402 2.402 0 0 1-.706-1.704c0-.617.236-1.234.706-1.704l1.611-1.611a.98.98 0 0 1 .837-.276c.47.07.802.48.968.925a2.501 2.501 0 1 0 3.214-3.214c-.446-.166-.855-.497-.925-.968a.979.979 0 0 1 .276-.837l1.61-1.61a2.404 2.404 0 0 1 1.705-.707c.617 0 1.234.236 1.704.706l1.568 1.568c.23.23.556.338.877.29.493-.074.84-.504 1.02-.968a2.5 2.5 0 1 1 3.237 3.237c-.464.18-.894.527-.967 1.02Z" />
                    </svg>
                  )}
                  {area.icon === "book" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20" />
                    </svg>
                  )}
                  {area.icon === "megaphone" && (
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <path d="m3 11 18-5v12L3 13v-2z" />
                      <path d="M11.6 16.8a3 3 0 1 1-5.8-1.6" />
                    </svg>
                  )}
                </div>
                <h3 class="card-title">{area.title}</h3>
                <p class="card-description">{area.description}</p>
                <a href={area.link} class="card-link" target="_blank">
                  {area.linkText}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M5 12h14" />
                    <path d="m12 5 7 7-7 7" />
                  </svg>
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Getting Started -->
    <section class="section">
      <div class="section-container">
        <h2 class="section-title">Quick Start for Contributors</h2>
        <div class="code-block">
          <pre><code># Clone the repository
git clone https://github.com/TeamFlojo/floimg.git
cd floimg

# Install dependencies
pnpm install

# Build all packages
pnpm -r build

# Run tests
pnpm -r test

# Start development
pnpm dev</code></pre>
          <button class="copy-btn" id="copy-setup">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect width="14" height="14" x="8" y="8" rx="2" ry="2"></rect>
              <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"></path>
            </svg>
          </button>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="section cta-section">
      <div class="section-container cta">
        <h2 class="cta-title">Ready to Contribute?</h2>
        <p class="cta-description">
          Check out our open issues and find something that interests you. Whether it's your first
          PR or your hundredth, we'd love to have you.
        </p>
        <div class="cta-buttons">
          <a href="https://github.com/TeamFlojo/floimg/issues" class="btn primary" target="_blank">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            View Open Issues
          </a>
          <a href="https://github.com/TeamFlojo/floimg" class="btn secondary" target="_blank">
            Star on GitHub
          </a>
        </div>
      </div>
    </section>
  </main>
</MarketingLayout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const copyBtn = document.getElementById("copy-setup");
    const codeText = `# Clone the repository
git clone https://github.com/TeamFlojo/floimg.git
cd floimg

# Install dependencies
pnpm install

# Build all packages
pnpm -r build

# Run tests
pnpm -r test

# Start development
pnpm dev`;

    copyBtn?.addEventListener("click", async () => {
      await navigator.clipboard.writeText(codeText);
      const svg = copyBtn.querySelector("svg");
      if (svg) {
        const originalHTML = svg.outerHTML;
        svg.outerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>`;
        setTimeout(() => {
          const newSvg = copyBtn.querySelector("svg");
          if (newSvg) newSvg.outerHTML = originalHTML;
        }, 2000);
      }
    });
  });
</script>

<style>
  main {
    min-height: 100vh;
  }

  /* Hero - always dark with white text */
  .hero-section {
    padding: 4rem 1.5rem 3rem;
    background: linear-gradient(
      135deg,
      var(--m-dark-bg-gradient-start) 0%,
      var(--m-dark-bg-gradient-mid) 50%,
      var(--m-dark-bg-gradient-end) 100%
    );
    border-bottom: 1px solid var(--m-dark-border);
  }

  .hero-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem;
    color: var(--m-dark-text);
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--m-dark-text-secondary);
    margin: 0 0 2rem;
    line-height: 1.6;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease;
  }

  a.stat:hover {
    transform: translateY(-2px);
  }

  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--sl-color-accent);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--m-dark-text-secondary);
  }

  /* Sections - follow theme */
  .section {
    padding: 4rem 1.5rem;
    background: var(--m-bg);
  }

  /* Alt sections - always dark */
  .section.alt {
    background: var(--m-dark-bg);
  }

  .section-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 0.75rem;
    text-align: center;
    color: var(--m-text);
  }

  /* Alt/dark sections should have white titles */
  .section.alt .section-title,
  .cta-section .section-title,
  .cta-section .cta-title {
    color: var(--m-dark-text);
  }

  .section-description {
    text-align: center;
    color: var(--m-text-secondary);
    margin: 0 0 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .section.alt .section-description {
    color: var(--m-dark-text-secondary);
  }

  .contributors-cta {
    margin-top: 2rem;
    text-align: center;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    border-radius: 6px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .btn.primary {
    background: var(--sl-color-accent);
    color: white;
  }

  .btn.primary:hover {
    opacity: 0.9;
  }

  .btn.secondary {
    background: var(--m-bg-surface);
    color: var(--m-text);
    border: 1px solid var(--m-border);
  }

  .btn.secondary:hover {
    border-color: var(--m-text-muted);
  }

  /* Contribution Grid - inside dark .alt section */
  .contribution-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1.5rem;
  }

  .contribution-card {
    background: var(--m-dark-bg-gradient-mid);
    border: 1px solid var(--m-dark-border);
    border-radius: 12px;
    padding: 1.5rem;
    transition: all 0.2s ease;
  }

  .contribution-card:hover {
    border-color: var(--sl-color-accent);
  }

  .card-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--m-dark-bg-gradient-end);
    border-radius: 10px;
    margin-bottom: 1rem;
    color: var(--sl-color-accent);
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: var(--m-dark-text);
  }

  .card-description {
    font-size: 0.875rem;
    color: var(--m-dark-text-secondary);
    margin: 0 0 1rem;
    line-height: 1.5;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--sl-color-accent);
    text-decoration: none;
  }

  .card-link:hover {
    text-decoration: underline;
  }

  /* Code Block - always dark with light text */
  .code-block {
    position: relative;
    background: var(--m-code-bg, #1e1e2e);
    border: 1px solid var(--m-code-border, #3f3f46);
    border-radius: 8px;
    padding: 1.5rem;
    overflow-x: auto;
    max-width: 700px;
    margin: 0 auto;
  }

  .code-block pre {
    margin: 0;
    background: transparent;
  }

  .code-block code {
    color: var(--m-code-text, #e4e4e7);
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
    font-size: 0.875rem;
  }

  .copy-btn {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.5rem;
    background: var(--m-dark-border);
    border: none;
    border-radius: 6px;
    color: var(--m-dark-text-secondary);
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .copy-btn:hover {
    background: var(--m-dark-bg-gradient-end);
    color: var(--m-dark-text);
  }

  /* CTA - always dark section */
  .cta-section {
    background: var(--m-dark-bg);
    border-top: 1px solid var(--m-dark-border);
  }

  .section-container.cta {
    text-align: center;
    max-width: 600px;
  }

  .cta-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 0.75rem;
    color: var(--m-dark-text);
  }

  .cta-description {
    color: var(--m-dark-text-secondary);
    margin: 0 0 1.5rem;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  @media (max-width: 640px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-stats {
      gap: 2rem;
    }

    .contribution-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
