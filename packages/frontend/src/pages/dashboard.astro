---
import MarketingLayout from "../layouts/MarketingLayout.astro";

// Redirect to Studio Cloud dashboard
const studioUrl = "https://studio.floimg.com/dashboard";
---

<MarketingLayout title="Redirecting to Dashboard">
  <div class="min-h-[70vh] px-6 py-12">
    <div class="mx-auto max-w-4xl">
      <div class="flex flex-col items-center justify-center py-24 text-center">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-teal-600 mb-4"></div>
        <p class="text-zinc-600 dark:text-zinc-400 mb-2">Redirecting to FloImg Studio Cloud...</p>
        <a href={studioUrl} class="text-teal-600 dark:text-teal-400 hover:underline text-sm">
          Click here if you're not redirected
        </a>
      </div>
    </div>
  </div>
</MarketingLayout>

<script define:vars={{ studioUrl }}>
  // Immediate redirect to Studio Cloud dashboard
  window.location.replace(studioUrl);
</script>
