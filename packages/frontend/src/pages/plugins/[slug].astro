<script define:vars={{ installation: plugin.installation }}>
  document.addEventListener("DOMContentLoaded", () => {
    // Install tabs
    const installTabs = document.querySelectorAll(".install-tab");
    const installCmd = document.getElementById("install-cmd");
    const copyBtns = document.querySelectorAll(".copy-btn");

    installTabs.forEach((tab) => {
      tab.addEventListener("click", () => {
        installTabs.forEach((t) => t.classList.remove("active"));
        tab.classList.add("active");
        const pkg = tab.getAttribute("data-pkg");
        if (installCmd && pkg) {
          const cmd = pkg === "npm" ? installation.npm : installation.pnpm;
          installCmd.textContent = cmd;
          // Update the first copy button's data-copy attribute
          const firstCopyBtn = installCmd.parentElement?.querySelector(".copy-btn");
          if (firstCopyBtn) {
            firstCopyBtn.setAttribute("data-copy", cmd);
          }
        }
      });
    });

    // Copy buttons
    copyBtns.forEach((btn) => {
      btn.addEventListener("click", async () => {
        const text = btn.getAttribute("data-copy") || "";
        await navigator.clipboard.writeText(text);
        const svg = btn.querySelector("svg");
        if (svg) {
          const originalHTML = svg.outerHTML;
          svg.outerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>`;
          setTimeout(() => {
            const newSvg = btn.querySelector("svg");
            if (newSvg) newSvg.outerHTML = originalHTML;
          }, 2000);
        }
      });
    });
  });
</script>

