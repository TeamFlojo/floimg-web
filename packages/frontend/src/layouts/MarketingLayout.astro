---
import NavDropdown from "../components/NavDropdown.astro";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  keywords?: string[];
}

const {
  title,
  description = "AI-powered image workflow engine for developers. Generate images with DALL-E, create charts, diagrams, and more. Claude Code plugin included.",
  ogImage = "/og/default.png",
  ogType = "website",
  keywords = [],
} = Astro.props;

// Navigation dropdown items
const productItems = [
  { label: "Studio", href: "https://studio.floimg.com", external: true },
  { label: "Gallery", href: "/gallery" },
  { label: "Pricing", href: "/pricing" },
];

const developersItems = [
  { label: "Docs", href: "/docs" },
  { label: "Plugins", href: "/plugins" },
  { label: "Community", href: "/community" },
];

const API_URL = import.meta.env.PUBLIC_API_URL || "https://api.floimg.com";
const siteUrl = "https://floimg.com";
const fullTitle = title === "Home" ? "floimg - AI Image Workflow Engine" : `${title} | floimg`;
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const ogImageUrl = ogImage.startsWith("http") ? ogImage : `${siteUrl}${ogImage}`;

const defaultKeywords = [
  "AI image generation",
  "image workflow",
  "DALL-E API",
  "Claude Code plugin",
  "chart generator",
  "diagram generator",
  "TypeScript image library",
  "Node.js image processing",
  "MCP server",
];

const allKeywords = [...new Set([...defaultKeywords, ...keywords])];

// JSON-LD structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  name: "floimg",
  applicationCategory: "DeveloperApplication",
  operatingSystem: "Cross-platform",
  description:
    "Universal image workflow engine for developers and AI agents. Generate AI images, charts, diagrams, and more with a unified API.",
  url: siteUrl,
  author: {
    "@type": "Organization",
    name: "Flojo, Inc",
    url: "https://flojo.io",
  },
  offers: {
    "@type": "Offer",
    price: "0",
    priceCurrency: "USD",
  },
  license: "https://opensource.org/licenses/MIT",
  programmingLanguage: ["TypeScript", "JavaScript"],
  softwareRequirements: "Node.js >= 18.0.0",
};
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Dark mode detection - runs before render to prevent flash -->
    <script is:inline>
      (function () {
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        if (prefersDark) {
          document.documentElement.classList.add("dark");
        }
        // Listen for changes
        window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", (e) => {
          if (e.matches) {
            document.documentElement.classList.add("dark");
          } else {
            document.documentElement.classList.remove("dark");
          }
        });
      })();
    </script>

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="keywords" content={allKeywords.join(", ")} />
    <meta name="author" content="Flojo, Inc" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content="floimg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <!-- Analytics -->
    <script
      defer
      src="https://analytics.goflojo.com/script.js"
      data-website-id="613c8ef0-c4fc-4059-8378-7818aadfff26"></script>
  </head>
  <body class="min-h-screen bg-white text-zinc-900 dark:bg-zinc-950 dark:text-white">
    <header class="border-b border-zinc-200 dark:border-white/10">
      <nav class="mx-auto max-w-7xl px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold text-zinc-900 dark:text-white">floimg</a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-6">
            <NavDropdown label="Product" items={productItems} />
            <NavDropdown label="Developers" items={developersItems} />
            <a
              href="https://github.com/TeamFlojo/floimg"
              class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
              target="_blank"
              rel="noopener noreferrer">GitHub</a
            >

            <!-- Auth buttons - shown when not logged in -->
            <div id="auth-guest" class="flex items-center gap-4">
              <a
                href="/login"
                class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                >Sign in</a
              >
              <a
                href="https://studio.floimg.com"
                class="rounded-lg bg-teal-600 px-4 py-2 text-sm font-medium text-white hover:bg-teal-500 transition-colors"
                >Get Started</a
              >
            </div>

            <!-- User menu - shown when logged in -->
            <div id="auth-user" class="hidden flex items-center gap-4">
              <a
                href="/dashboard"
                class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                >Dashboard</a
              >
              <div class="relative">
                <button
                  id="user-menu-btn"
                  class="flex items-center justify-center w-8 h-8 rounded-full bg-teal-600 text-white text-sm font-medium"
                >
                  <span id="user-initial">?</span>
                </button>
              </div>
            </div>
          </div>

          <!-- Mobile Menu Button -->
          <button
            id="mobile-menu-btn"
            class="md:hidden p-2 text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white"
            aria-label="Toggle menu"
          >
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M3 12h18M3 6h18M3 18h18" stroke-linecap="round" stroke-linejoin="round"
              ></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
          <div class="flex flex-col gap-2">
            <div class="py-2">
              <span
                class="text-xs font-semibold text-zinc-500 dark:text-zinc-400 uppercase tracking-wider"
                >Product</span
              >
              <div class="mt-2 flex flex-col gap-1">
                <a
                  href="https://studio.floimg.com"
                  class="py-2 text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white"
                  >Studio</a
                >
                <a
                  href="/gallery"
                  class="py-2 text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white"
                  >Gallery</a
                >
                <a
                  href="/pricing"
                  class="py-2 text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white"
                  >Pricing</a
                >
              </div>
            </div>
            <div class="py-2">
              <span
                class="text-xs font-semibold text-zinc-500 dark:text-zinc-400 uppercase tracking-wider"
                >Developers</span
              >
              <div class="mt-2 flex flex-col gap-1">
                <a
                  href="/docs"
                  class="py-2 text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white"
                  >Docs</a
                >
                <a
                  href="/plugins"
                  class="py-2 text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white"
                  >Plugins</a
                >
                <a
                  href="/community"
                  class="py-2 text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white"
                  >Community</a
                >
              </div>
            </div>
            <div
              class="border-t border-zinc-200 dark:border-white/10 pt-4 mt-2 flex flex-col gap-2"
            >
              <a
                href="https://github.com/TeamFlojo/floimg"
                class="py-2 text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white"
                target="_blank"
                rel="noopener noreferrer">GitHub</a
              >
              <a
                href="/login"
                class="py-2 text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white"
                >Sign in</a
              >
              <a
                href="https://studio.floimg.com"
                class="mt-2 rounded-lg bg-teal-600 px-4 py-2 text-sm font-medium text-white text-center hover:bg-teal-500 transition-colors"
                >Get Started</a
              >
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="border-t border-zinc-200 bg-zinc-50 dark:border-white/10 dark:bg-zinc-900/50">
      <div class="mx-auto max-w-7xl px-6 py-12">
        <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
          <div>
            <span class="text-lg font-bold text-zinc-900 dark:text-white">floimg</span>
            <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">
              Universal image workflow engine for developers and AI agents.
            </p>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-zinc-900 dark:text-white">Product</h3>
            <ul class="mt-4 space-y-2">
              <li>
                <a
                  href="https://studio.floimg.com"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Studio</a
                >
              </li>
              <li>
                <a
                  href="/docs"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Documentation</a
                >
              </li>
              <li>
                <a
                  href="/gallery"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Gallery</a
                >
              </li>
              <li>
                <a
                  href="/pricing"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Pricing</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-zinc-900 dark:text-white">Open Source</h3>
            <ul class="mt-4 space-y-2">
              <li>
                <a
                  href="https://github.com/TeamFlojo/floimg"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  target="_blank"
                  rel="noopener noreferrer">floimg Core</a
                >
              </li>
              <li>
                <a
                  href="https://github.com/TeamFlojo/floimg-studio"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  target="_blank"
                  rel="noopener noreferrer">FloImg Studio</a
                >
              </li>
              <li>
                <a
                  href="/community"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Community</a
                >
              </li>
              <li>
                <a
                  href="https://github.com/TeamFlojo/floimg/issues"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  target="_blank"
                  rel="noopener noreferrer">Contribute</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-zinc-900 dark:text-white">Resources</h3>
            <ul class="mt-4 space-y-2">
              <li>
                <a
                  href="/docs/getting-started/installation"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Getting Started</a
                >
              </li>
              <li>
                <a
                  href="/docs/plugins/quickchart"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Plugins</a
                >
              </li>
              <li>
                <a
                  href="/docs/mcp/claude-integration"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >MCP Integration</a
                >
              </li>
            </ul>
          </div>
        </div>
        <div
          class="mt-12 border-t border-zinc-200 dark:border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-zinc-500"
        >
          <div class="flex items-center gap-4">
            <a href="/terms" class="hover:text-zinc-900 dark:hover:text-white transition-colors"
              >Terms of Service</a
            >
            <span class="hidden md:inline">|</span>
            <span>MIT License</span>
          </div>
          <p>
            A <a
              href="https://flojo.io"
              class="text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
              target="_blank"
              rel="noopener noreferrer">Flojo, Inc</a
            > product
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/custom.css";
</style>

<script define:vars={{ API_URL }}>
  // Check auth state and update header
  async function updateAuthState() {
    const guestEl = document.getElementById("auth-guest");
    const userEl = document.getElementById("auth-user");
    const initialEl = document.getElementById("user-initial");

    try {
      const res = await fetch(`${API_URL}/api/auth/me`, {
        credentials: "include",
      });

      if (res.ok) {
        const data = await res.json();
        const user = data.user;

        // Show user menu, hide guest buttons
        guestEl?.classList.add("hidden");
        userEl?.classList.remove("hidden");

        // Set user initial
        if (initialEl) {
          const initial = (user.name || user.email)[0].toUpperCase();
          initialEl.textContent = initial;
        }
      }
    } catch {
      // Keep guest state (default)
    }
  }

  updateAuthState();

  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById("mobile-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuBtn?.addEventListener("click", () => {
    const isOpen = !mobileMenu?.classList.contains("hidden");
    if (isOpen) {
      mobileMenu?.classList.add("hidden");
    } else {
      mobileMenu?.classList.remove("hidden");
    }
  });
</script>
