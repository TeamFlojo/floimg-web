---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Universal image workflow engine for developers and AI agents" } =
  Astro.props;
const API_URL = import.meta.env.PUBLIC_API_URL || "https://api.floimg.com";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | floimg</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-white text-zinc-900 dark:bg-zinc-950 dark:text-white">
    <header class="border-b border-zinc-200 dark:border-white/10">
      <nav class="mx-auto max-w-7xl px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold text-zinc-900 dark:text-white">floimg</a>
          <div class="flex items-center gap-8">
            <a
              href="https://studio.floimg.com"
              class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
              >Studio</a
            >
            <a
              href="/docs"
              class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
              >Docs</a
            >
            <a
              href="/plugins"
              class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
              >Plugins</a
            >
            <a
              href="/gallery"
              class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
              >Gallery</a
            >
            <a
              href="/community"
              class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
              >Community</a
            >
            <a
              href="https://github.com/TeamFlojo/floimg"
              class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
              target="_blank"
              rel="noopener noreferrer">GitHub</a
            >

            <!-- Auth buttons - shown when not logged in -->
            <div id="auth-guest" class="flex items-center gap-4">
              <a
                href="/login"
                class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                >Sign in</a
              >
              <a
                href="/signup"
                class="rounded-lg bg-violet-600 px-4 py-2 text-sm font-medium text-white hover:bg-violet-500 transition-colors"
                >Get Started</a
              >
            </div>

            <!-- User menu - shown when logged in -->
            <div id="auth-user" class="hidden flex items-center gap-4">
              <a
                href="/dashboard"
                class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                >Dashboard</a
              >
              <div class="relative">
                <button
                  id="user-menu-btn"
                  class="flex items-center justify-center w-8 h-8 rounded-full bg-violet-600 text-white text-sm font-medium"
                >
                  <span id="user-initial">?</span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="border-t border-zinc-200 bg-zinc-50 dark:border-white/10 dark:bg-zinc-900/50">
      <div class="mx-auto max-w-7xl px-6 py-12">
        <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
          <div>
            <span class="text-lg font-bold text-zinc-900 dark:text-white">floimg</span>
            <p class="mt-2 text-sm text-zinc-600 dark:text-zinc-400">
              Universal image workflow engine for developers and AI agents.
            </p>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-zinc-900 dark:text-white">Product</h3>
            <ul class="mt-4 space-y-2">
              <li>
                <a
                  href="https://studio.floimg.com"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Studio</a>
              </li>
              <li>
                <a
                  href="/docs"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Documentation</a>
              </li>
              <li>
                <a
                  href="/gallery"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Gallery</a>
              </li>
              <li>
                <a
                  href="/pricing"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Pricing</a>
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-zinc-900 dark:text-white">Open Source</h3>
            <ul class="mt-4 space-y-2">
              <li>
                <a
                  href="https://github.com/TeamFlojo/floimg"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  target="_blank"
                  rel="noopener noreferrer">floimg Core</a>
              </li>
              <li>
                <a
                  href="https://github.com/TeamFlojo/floimg-studio"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  target="_blank"
                  rel="noopener noreferrer">floimg Studio</a>
              </li>
              <li>
                <a
                  href="/community"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Community</a>
              </li>
              <li>
                <a
                  href="https://github.com/TeamFlojo/floimg/issues"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  target="_blank"
                  rel="noopener noreferrer">Contribute</a>
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-sm font-semibold text-zinc-900 dark:text-white">Resources</h3>
            <ul class="mt-4 space-y-2">
              <li>
                <a
                  href="/docs/getting-started/installation"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Getting Started</a>
              </li>
              <li>
                <a
                  href="/docs/plugins/quickchart"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >Plugins</a>
              </li>
              <li>
                <a
                  href="/docs/mcp/claude-integration"
                  class="text-sm text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
                  >MCP Integration</a>
              </li>
            </ul>
          </div>
        </div>
        <div
          class="mt-12 border-t border-zinc-200 dark:border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-zinc-500"
        >
          <div class="flex items-center gap-4">
            <a href="/terms" class="hover:text-zinc-900 dark:hover:text-white transition-colors"
              >Terms of Service</a
            >
            <span class="hidden md:inline">|</span>
            <span>MIT License</span>
          </div>
          <p>
            A <a
              href="https://flojo.io"
              class="text-zinc-600 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white transition-colors"
              target="_blank"
              rel="noopener noreferrer">Flojo, Inc</a
            > product
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/custom.css";
</style>

<script define:vars={{ API_URL }}>
  // Check auth state and update header
  async function updateAuthState() {
    const guestEl = document.getElementById("auth-guest");
    const userEl = document.getElementById("auth-user");
    const initialEl = document.getElementById("user-initial");

    try {
      const res = await fetch(`${API_URL}/api/auth/me`, {
        credentials: "include",
      });

      if (res.ok) {
        const data = await res.json();
        const user = data.user;

        // Show user menu, hide guest buttons
        guestEl?.classList.add("hidden");
        userEl?.classList.remove("hidden");

        // Set user initial
        if (initialEl) {
          const initial = (user.name || user.email)[0].toUpperCase();
          initialEl.textContent = initial;
        }
      }
    } catch {
      // Keep guest state (default)
    }
  }

  updateAuthState();
</script>
