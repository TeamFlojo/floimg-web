---
import type { Plugin } from "../data/plugins";

interface Props {
  plugin: Plugin;
}

const { plugin } = Astro.props;

const categoryColors: Record<string, { bg: string; text: string }> = {
  AI: {
    bg: "bg-emerald-100 dark:bg-emerald-900/30",
    text: "text-emerald-700 dark:text-emerald-300",
  },
  "Data Visualization": {
    bg: "bg-blue-100 dark:bg-blue-900/30",
    text: "text-blue-700 dark:text-blue-300",
  },
  Diagrams: {
    bg: "bg-violet-100 dark:bg-violet-900/30",
    text: "text-violet-700 dark:text-violet-300",
  },
  Utilities: {
    bg: "bg-amber-100 dark:bg-amber-900/30",
    text: "text-amber-700 dark:text-amber-300",
  },
};

const colors = categoryColors[plugin.category] || categoryColors["Utilities"];
---

<a href={`/plugins/${plugin.slug}`} class="plugin-card group">
  <div class="card-image">
    <img src={plugin.heroImage} alt={`${plugin.name} example`} loading="lazy" />
    <div class="card-overlay">
      <span class="view-plugin">View Plugin</span>
    </div>
  </div>

  <div class="card-content">
    <div class="card-header">
      <h3 class="card-title">{plugin.name}</h3>
      <span class={`category-badge ${colors.bg} ${colors.text}`}>
        {plugin.category}
      </span>
    </div>

    <p class="card-description">{plugin.description}</p>

    <div class="card-tags">
      {plugin.tags.slice(0, 4).map((tag) => <span class="tag">#{tag}</span>)}
    </div>

    <div class="card-footer">
      <code class="package-name">{plugin.packageName}</code>
    </div>
  </div>
</a>

<style>
  .plugin-card {
    display: flex;
    flex-direction: column;
    background: var(--sl-color-bg);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
  }

  .plugin-card:hover {
    border-color: var(--sl-color-accent);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .card-image {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: var(--sl-color-gray-6);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .plugin-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .plugin-card:hover .card-overlay {
    opacity: 1;
  }

  .view-plugin {
    background: white;
    color: black;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .card-content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    flex: 1;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .card-title {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .category-badge {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
    white-space: nowrap;
  }

  .card-description {
    margin: 0;
    font-size: 0.875rem;
    color: var(--sl-color-gray-2);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--sl-color-gray-3);
  }

  .card-footer {
    margin-top: auto;
    padding-top: 0.75rem;
    border-top: 1px solid var(--sl-color-gray-5);
  }

  .package-name {
    font-size: 0.75rem;
    color: var(--sl-color-gray-3);
    background: var(--sl-color-gray-6);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }
</style>
