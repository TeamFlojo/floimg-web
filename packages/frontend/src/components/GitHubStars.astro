---
// GitHub stars badge component
// Shows star count and links to the repository

interface Props {
  repo?: string;
  class?: string;
}

const { repo = "TeamFlojo/floimg", class: className = "" } = Astro.props;
---

<a
  href={`https://github.com/${repo}`}
  class={`github-stars ${className}`}
  target="_blank"
  rel="noopener noreferrer"
  data-repo={repo}
>
  <svg class="github-icon" viewBox="0 0 16 16" fill="currentColor">
    <path
      d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"
    ></path>
  </svg>
  <span class="star-icon">★</span>
  <span class="star-count" data-count>—</span>
</a>

<script>
  async function fetchStars() {
    const badges = document.querySelectorAll(".github-stars");

    for (const badge of badges) {
      const repo = badge.getAttribute("data-repo");
      const countEl = badge.querySelector("[data-count]");

      if (!repo || !countEl) continue;

      try {
        const response = await fetch(`https://api.github.com/repos/${repo}`);
        if (response.ok) {
          const data = await response.json();
          const count = data.stargazers_count;
          countEl.textContent = count >= 1000 ? `${(count / 1000).toFixed(1)}k` : count.toString();
        }
      } catch {
        countEl.textContent = "★";
      }
    }
  }

  fetchStars();
  document.addEventListener("astro:after-swap", fetchStars);
</script>

<style>
  .github-stars {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.875rem;
    background: var(--sl-color-bg);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    color: var(--sl-color-text);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .github-stars:hover {
    border-color: var(--sl-color-gray-4);
    background: var(--sl-color-gray-6);
  }

  .github-icon {
    width: 1rem;
    height: 1rem;
  }

  .star-icon {
    color: rgb(234 179 8);
  }

  .star-count {
    color: var(--sl-color-gray-2);
  }
</style>
