---
interface Props {
  tag: string;
  href?: string;
}

const { tag, href } = Astro.props;
---

{
  href ? (
    <a href={href} class="tag-badge">
      {tag}
    </a>
  ) : (
    <span class="tag-badge">{tag}</span>
  )
}

<style>
  .tag-badge {
    display: inline-block;
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: var(--sl-color-gray-6, rgb(244 244 245));
    color: var(--sl-color-gray-2, rgb(82 82 91));
    border-radius: 0.25rem;
    text-decoration: none;
    transition: background 0.2s;
  }

  :global(.dark) .tag-badge {
    background: rgb(39 39 42);
    color: rgb(161 161 170);
  }

  a.tag-badge:hover {
    background: rgb(13 148 136 / 0.1);
    color: rgb(13 148 136);
  }

  :global(.dark) a.tag-badge:hover {
    background: rgb(13 148 136 / 0.2);
    color: rgb(45 212 191);
  }
</style>
