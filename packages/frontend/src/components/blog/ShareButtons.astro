---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;

const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);

const shareLinks = {
  twitter: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
};
---

<div class="share-buttons">
  <span class="share-label">Share:</span>
  <a
    href={shareLinks.twitter}
    target="_blank"
    rel="noopener noreferrer"
    class="share-btn"
    aria-label="Share on Twitter"
  >
    <svg viewBox="0 0 24 24" fill="currentColor" class="share-icon">
      <path
        d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
      ></path>
    </svg>
  </a>
  <a
    href={shareLinks.linkedin}
    target="_blank"
    rel="noopener noreferrer"
    class="share-btn"
    aria-label="Share on LinkedIn"
  >
    <svg viewBox="0 0 24 24" fill="currentColor" class="share-icon">
      <path
        d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
      ></path>
    </svg>
  </a>
  <button class="share-btn copy-link-btn" aria-label="Copy link">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="share-icon">
      <path
        d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
      <path
        d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </button>
</div>

<style>
  .share-buttons {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .share-label {
    font-size: 0.875rem;
    color: var(--sl-color-gray-3, rgb(113 113 122));
  }

  .share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: 0.5rem;
    background: var(--sl-color-gray-6, rgb(244 244 245));
    color: var(--sl-color-gray-2, rgb(82 82 91));
    border: none;
    cursor: pointer;
    transition:
      background 0.2s,
      color 0.2s;
  }

  :global(.dark) .share-btn {
    background: rgb(39 39 42);
    color: rgb(161 161 170);
  }

  .share-btn:hover {
    background: rgb(13 148 136);
    color: white;
  }

  .share-icon {
    width: 1rem;
    height: 1rem;
  }
</style>

<script>
  function initShareButtons() {
    document.querySelectorAll(".copy-link-btn").forEach((btn) => {
      btn.addEventListener("click", async () => {
        await navigator.clipboard.writeText(window.location.href);
        // Visual feedback
        const icon = btn.querySelector("svg");
        if (icon) {
          icon.innerHTML =
            '<path d="M20 6L9 17l-5-5" stroke-linecap="round" stroke-linejoin="round"/>';
          setTimeout(() => {
            icon.innerHTML =
              '<path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" stroke-linecap="round" stroke-linejoin="round"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" stroke-linecap="round" stroke-linejoin="round"/>';
          }, 2000);
        }
      });
    });
  }

  initShareButtons();
  document.addEventListener("astro:after-swap", initShareButtons);
</script>
