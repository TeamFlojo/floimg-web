---
import type { CollectionEntry } from "astro:content";
import CategoryBadge from "./CategoryBadge.astro";
import TagBadge from "./TagBadge.astro";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, pubDate, category, tags, heroImage, author } = post.data;

const formattedDate = pubDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="blog-card group">
  <!-- Hero Image -->
  <a href={`/blog/${post.id}`} class="image-link">
    <div class="image-container">
      {
        heroImage ? (
          <img src={heroImage} alt={title} class="hero-image" loading="lazy" />
        ) : (
          <div class="placeholder-image">
            <svg
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              class="placeholder-icon"
            >
              <path
                d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </div>
        )
      }
    </div>
  </a>

  <!-- Content -->
  <div class="card-content">
    <div class="card-meta">
      <CategoryBadge category={category} />
      <span class="date">{formattedDate}</span>
    </div>

    <a href={`/blog/${post.id}`} class="title-link">
      <h2 class="card-title">{title}</h2>
    </a>

    <p class="card-description">{description}</p>

    {
      tags && tags.length > 0 && (
        <div class="tag-list">
          {tags.slice(0, 3).map((tag) => (
            <TagBadge tag={tag} />
          ))}
        </div>
      )
    }

    <div class="card-footer">
      <span class="author">By {author}</span>
      <a href={`/blog/${post.id}`} class="read-more">
        Read more
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          class="arrow-icon"
        >
          <path d="M5 12h14M12 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
      </a>
    </div>
  </div>
</article>

<style>
  .blog-card {
    background: var(--sl-color-bg, white);
    border: 1px solid var(--sl-color-gray-5, rgb(228 228 231));
    border-radius: 0.75rem;
    overflow: hidden;
    transition:
      box-shadow 0.2s,
      transform 0.2s;
  }

  .blog-card:hover {
    box-shadow:
      0 10px 25px -5px rgb(0 0 0 / 0.1),
      0 8px 10px -6px rgb(0 0 0 / 0.1);
  }

  :global(.dark) .blog-card:hover {
    box-shadow:
      0 10px 25px -5px rgb(13 148 136 / 0.1),
      0 8px 10px -6px rgb(13 148 136 / 0.1);
  }

  .image-link {
    display: block;
  }

  .image-container {
    aspect-ratio: 16 / 9;
    background: linear-gradient(
      135deg,
      var(--sl-color-gray-6, rgb(244 244 245)),
      var(--sl-color-gray-5, rgb(228 228 231))
    );
    overflow: hidden;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .blog-card:hover .hero-image {
    transform: scale(1.02);
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-icon {
    width: 3rem;
    height: 3rem;
    color: var(--sl-color-gray-4, rgb(161 161 170));
  }

  .card-content {
    padding: 1.25rem;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .date {
    font-size: 0.75rem;
    color: var(--sl-color-gray-3, rgb(113 113 122));
  }

  .title-link {
    text-decoration: none;
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--sl-color-text, rgb(24 24 27));
    margin: 0 0 0.5rem;
    line-height: 1.4;
    transition: color 0.2s;
  }

  .title-link:hover .card-title {
    color: rgb(13 148 136);
  }

  :global(.dark) .title-link:hover .card-title {
    color: rgb(45 212 191);
  }

  .card-description {
    font-size: 0.875rem;
    color: var(--sl-color-gray-3, rgb(113 113 122));
    margin: 0 0 1rem;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 1rem;
  }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 0.75rem;
    border-top: 1px solid var(--sl-color-gray-5, rgb(228 228 231));
  }

  .author {
    font-size: 0.75rem;
    color: var(--sl-color-gray-3, rgb(113 113 122));
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: rgb(13 148 136);
    text-decoration: none;
    transition: gap 0.2s;
  }

  .read-more:hover {
    gap: 0.5rem;
  }

  :global(.dark) .read-more {
    color: rgb(45 212 191);
  }

  .arrow-icon {
    width: 1rem;
    height: 1rem;
  }
</style>
